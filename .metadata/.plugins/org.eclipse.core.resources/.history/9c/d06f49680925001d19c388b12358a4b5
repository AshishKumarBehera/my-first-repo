package Armstrong;
import java.util.Scanner;

public class armstrong {
public static void main(String[]args) {
	Scanner scan = new Scanner(System.in);
	System.out.println("Enter the number:");
	int n = scan.nextInt();
	int sum=0;
	while(n>0) {
		int r=n%10;
		sum=sum+r*r*r;
		n=n/10;
	if(n==sum) 
	System.out.println("This number is an armstrong number"+sum);
	scan.close();
	
	}
}
}
